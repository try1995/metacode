{
  "name": "metacode",
  "displayName": "MetaCode",
  "description": "use llm to generate code, readme and so on.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "metacode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "metacode.addComments",
        "title": "Add Comments"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "metacode Extension Configuration",
      "properties": {
        "metacode.llmUrl": {
          "type": "string",
          "default": "http://localhost:11434/api/chat",
          "description": "Enable or disable the feature."
        },
        "myExtension.llmType": {
          "type": "string",
          "default": "ollama",
          "description": "Greeting message to display."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/follow-redirects": "^1.14.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.3",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "express": "^4.19.2",
    "follow-redirects": "^1.15.6",
    "metacall": "^0.4.3"
  }
}
